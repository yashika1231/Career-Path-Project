// Chat History Model
model ChatMessage {
  id        String   @id @default(cuid())
  userId    String   // This will be the Clerk User ID
  role      String   // "user" or "model"
  content   String
  createdAt DateTime @default(now())
  
  @@index([userId, createdAt]) // Index for fast chat history retrieval
}