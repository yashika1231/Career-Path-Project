// Project Model
model Project {
  id          String   @id @default(cuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  
  name        String
  description String?
  url         String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Certification Model
model Certification {
  id          String   @id @default(cuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  
  name        String
  issuer      String?
  date        DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Volunteer Work Model
model VolunteerWork {
  id          String   @id @default(cuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  
  organization String
  role         String
  startDate    DateTime?
  endDate      DateTime?
  description  String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

